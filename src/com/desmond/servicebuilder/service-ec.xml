<?xml version="1.0" encoding="UTF-8"?>
<desmond-builder package-path="com.desmond.article.ge">
	<author>Presley</author>
	<namespace>art</namespace>
	
	<entity name="Article" sub-package-path="mg">
		<column name="articleId" type="long" primary="true" auto-increment="false" />
		
		<column name="createdDate" type="Timestamp" />
		<column name="modifiedDate" type="Timestamp" />
		<column name="pubDate" type="Timestamp" />
		
		<column name="title" type="String" />
		<column name="description" type="Clob" />
		<column name="link" type="String2" />
		<column name="author" type="String" />
		<column name="guid" type="String" />
		<column name="category" type="String" />
		<column name="comments" type="Clob" />
	</entity>
	
	<entity name="MigrateArticle" sub-package-path="mg">
		<column name="articleId" type="long" primary="true" auto-increment="false" />
		
		<column name="createdDate" type="Timestamp" />
		<column name="modifiedDate" type="Timestamp" />
		<column name="pubDate" type="Timestamp" />
		
		<column name="title" type="String" />
		<column name="description" type="Clob" />
		<column name="link" type="String2" />
		<column name="author" type="String" />
		<column name="guid" type="String" />
		<column name="category" type="String" />
		<column name="comments" type="Clob" />
	</entity>
    
	<database>
		<jdbcurl>jdbc:mysql://localhost:3306/liferay?useUnicode=true&amp;characterEncoding=UTF-8</jdbcurl>
		<user>root</user>
		<password>root</password>
		<driverClass>com.mysql.jdbc.Driver</driverClass>
	</database>
</desmond-builder>